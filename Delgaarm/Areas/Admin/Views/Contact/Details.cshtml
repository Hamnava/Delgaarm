@model ContactUs
@{
    ViewData["Title"] = "Details";
}
<style>
    .mymargin{
        margin-bottom:15px;
    }
</style>
<div class="right_col" role="main">
    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="glyphicon glyphicon-user"></i>
            مشخصات پیام مشتری
        </span>
    </div>

    <div class="panel panel-body container-fluid"
         style="border-radius:2px; box-shadow:3px 1px 1px 0 gray; background-color:#e6e2e2;">

        <div style="margin-bottom:10px;">
            <div class="col-md-6 col-xs-12">


                <div>
                    <span style="font-weight:bold">نام : </span>
                    <span style="color:darkgreen;">@Model.Name</span>
                </div>
                <br />
                <div>
                    <span style="font-weight:bold">ایمیل : </span>
                    <span style="color:darkgreen;">@Model.Email</span>
                </div>
                <br />
                <div>
                    <span style="font-weight:bold"> پیام : </span>
                    <span style="color:darkgreen;">@Model.Message</span>
                </div>
                <br />
              

            </div>


           

            <hr style="height:1px; background-color:gray; margin-top:10px;" class="col-md-12 col-xs-12 row" />


            <div class="col-xs-12 form-group" style="margin-top:15px;">

                <a asp-controller="Contact" asp-action="Index" class="btn pull-right"
                   style="border:1px solid gray; border-radius:3px; color:black; margin-left:10px; width:70px;">بازگشت</a>

                <a href="#" style="border:1px solid gray; border-radius:3px; color:black; margin-left:10px; width:70px;" class="btn pull-right">چاپ</a>
            </div>
        </div>

    </div>
</div>