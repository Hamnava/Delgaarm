
@model IEnumerable<ProductGallery>

    @foreach (var item in Model)
{
    <div class="col-md-3 admin-gallery">
        <div class="card mb-3">
           <div class="card-img-wrapper ">
                <img src="~/@item.ImageUrl" alt="productGallery" class="img-responsive" />
                <a asp-action="Delete" asp-controller="Gallery" asp-route-id="@item.Id" 
                   asp-route-url="@ViewBag.Photo" asp-route-productId="@ViewBag.ProductId"
                   class="btn btn-danger over-icon animate">
                   <i class="fa fa-trash"></i>
                </a>
            </div>
        </div>
    </div>
}

