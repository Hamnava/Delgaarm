@model ProductViewModel

@{
    ViewData["Title"] = "Edit product";
}

<div class="right_col" role="main">


    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="glyphicon glyphicon-plus"></i>
            فرم ویرایش محصول جدید
        </span>
    </div>

    <div class="panel panel-body container-fluid" style="border-radius:2px; box-shadow:3px 1px 1px 0 gray; background-color:#e6e2e2;">
        <form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div class="col-md-6 col-xs-12">


                <!--ProductName-->
                <div>
                    <label asp-for="ProductName" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="ProductName" type="text" class="form-control custominput" placeholder="نام  ..." autocomplete="off" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>

                <!--producStars-->
                <div>
                    <label asp-for="producStars" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="producStars" type="text" class="form-control custominput" placeholder="ستاره ..." autocomplete="off" />
                        <span asp-validation-for="producStars" class="text-danger"></span>
                    </div>
                </div>

                <!--TekaType-->
                <div>
                    <label asp-for="TekaType" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="TekaType" type="text" class="form-control custominput" placeholder="  نوع تکه ..." autocomplete="off" />
                        <span asp-validation-for="TekaType" class="text-danger"></span>
                    </div>
                </div>

                <!--Alt-->
                <div>
                    <label asp-for="Alt" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="Alt" type="text" class="form-control custominput" placeholder="Alt ..." autocomplete="off" />
                        <span asp-validation-for="Alt" class="text-danger"></span>
                    </div>
                </div>

                <!--title-->
                <div>
                    <label asp-for="Title" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="Title" type="text" class="form-control custominput" placeholder="  Title ..." autocomplete="off" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <!--MainPrice-->
                <div>
                    <label asp-for="MainPrice" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="MainPrice" type="text" class="form-control custominput" placeholder="قمیمت  ..." autocomplete="off" />
                        <span asp-validation-for="MainPrice" class="text-danger"></span>
                    </div>
                </div>

                <!--sepcialprice-->
                <div>
                    <label asp-for="sepcialprice" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="sepcialprice" type="text" class="form-control custominput" placeholder="قیمت تخفیف خورده  ..." autocomplete="off" />
                        <span asp-validation-for="sepcialprice" class="text-danger"></span>
                    </div>
                </div>

                <!--count-->
                <div>
                    <label asp-for="count" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="count" type="text" class="form-control custominput" placeholder=" تعداد محصول   ..." autocomplete="off" />
                        <span asp-validation-for="count" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <label class="control-label"> </label>
                    <div class="col-md-9 col-xs-12">
                    <select asp-for="ColorId" class="form-select form-control custominput" asp-items="ViewBag.ColorId">
                        <option selected>انتخاب رنگ</option>
                    </select>
                    <span asp-validation-for="ColorId" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <label  class="control-label"> </label>
                    <div class="col-md-9 col-xs-12">
                    <select asp-for="CategoryId" class="form-select form-control custominput" asp-items="ViewBag.CategoryId">
                        <option selected>انتخاب کتگوری</option>
                    </select>
                    <span asp-validation-for="ColorId" class="text-danger"></span>
                    </div>
                </div>


                 <!--IsPrefered-->
                <div>
                    <div class="col-md-9 col-xs-12" style="margin-top:10px;">
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsPrefered" type="radio" name="IsPrefered" value="true"  />
                            پیشنهاد ما
                        </label>
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsPrefered" type="radio" name="IsPrefered" value="false" />
                           پیشنهاد نباشد
                        </label>
                    </div>
                </div>
                   

                 <!--IsBestSeller-->
                <div>
                    <div class="col-md-9 col-xs-12" style="margin-top:10px;">
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsBestSeller" type="radio" name="IsBestSeller" value="true"  />
                            پر فروش
                        </label>
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsBestSeller" type="radio" name="IsBestSeller" value="false" />
                            پر فروش نیست
                        </label>
                    </div>
                </div>

                 <!--IsActive-->
                <div>
                    <div class="col-md-9 col-xs-12" style="margin-top:10px;">
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsActive" type="radio" name="IsActive" value="true"  />
                            فعال 
                        </label>
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsActive" type="radio" name="IsActive" value="false" />
                           غیر فعال
                        </label>
                    </div>
                </div>
                   


                 <!--IsNew-->
                <div>
                    <div class="col-md-9 col-xs-12" style="margin-top:10px;">
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsNew" type="radio" name="IsNew" value="true"  />
                            جدید است
                        </label>
                        <label class="col-md-5 col-xs-6">
                            <input asp-for="IsNew" type="radio" name="IsNew" value="false" />
                            جدید نیست
                        </label>
                    </div>
                </div>

            </div>

            <div class="col-md-6 col-xs-12">
                <input asp-for="Id" hidden/>
                <!--Address-->
                <div>
                    <div class="col-md-12 col-xs-12">
                        <textarea asp-for="Description" type="text" class="form-control custominput" placeholder=" توضیحات  ..." autocomplete="off">
                        </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!--Profile-->
                <div class="mt-5">
                    <label class="control-label col-md-3 col-xs-12">عکس</label>
                    <div class="col-md-9 col-xs-12">
                       <input type="hidden" asp-for="ProductImage" />
                        <input name="file" type="file" class="form-control mb-3">
                        
                         <img src="~/@Model.ProductImage"  class="img-responsive img-thumbnail " />
                    </div>
                </div>



                <div class="col-xs-12 form-group" style="margin-top:15px;">
                    <input type="submit" style="border:1px solid gray; border-radius:3px;"
                           value="ثبت تغیرات جدید" class="btn pull-right" />
                </div>
            </div>

        </form>
    </div>


</div>


<script src="~/lib/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("Description");
</script>